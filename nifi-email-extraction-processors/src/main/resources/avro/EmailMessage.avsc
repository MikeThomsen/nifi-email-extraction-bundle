{
	"namespace": "org.apache.nifi.processor.email.extraction",
	"type": "record",
	"name": "EmailMessage",
	"fields": [
		{
			"name": "subject",
			"type": "string"
		},
		{
			"name": "body",
			"type": "string"
		},
		{
			"name": "body_type",
			"type": {
				"name": "BodyType",
				"type": "enum",
				"symbols": [ "HTML", "PLAIN", "RTF" ]
			}
		},
		{
		    "name": "recipients",
		    "type": {
		        "type": "array",
                    "items": {
                    "type": "record",
                    "name": "RecipientDetails",
                    "fields": [
                        {
                            "name": "name",
                            "type": "string"
                        },
                        {
                            "name": "email_address",
                            "type": "string"
                        }
                    ]
                }
            }
		},
		{
		    "name": "sender_details",
		    "type": {
		        "type": "record",
		        "name": "SenderDetails",
		        "fields": [
		            {
		                "name": "name",
		                "type": "string"
		            },
		            {
		                "name": "email_address",
		                "type": "string"
		            }
		        ]
		    }
		}
	]
}
